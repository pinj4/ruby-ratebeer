<h1>Breweries</h1>

<p>Number of breweries: <%= @active_breweries.count + @retired_breweries.count %></p>
<p><%= link_to 'list of beers', beers_path %>

<h2>Active</h2>
<div id="breweries">
  <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Year</th>
    </tr>
  </thead>
  <tbody>
    <% @active_breweries.each do |brewery| %>
      <div id="<%= dom_id brewery %>">
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
      </div>
    <% end %>
  </tbody>
  </table>
</div>

<h2>Retired</h2>
<div id="retired_breweries">
  <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Year</th>
    </tr>
  </thead>
  <tbody>
    <% @retired_breweries.each do |brewery| %>
      <div id="<%= dom_id brewery %>">
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
      </tr>
      </div>
    <% end %>
  </tbody>
  </table>
</div>

<%= link_to "New brewery", new_brewery_path, class:"btn btn-primary" if current_user %>