<p style="color: green"><%= notice %></p>

<h1>Beers</h1>
<p><%= link_to 'list of breweries', breweries_path %></p><br>

<div id="beers">
  <% @beers.each do |beer| %>
    <p><strong>Name: </strong><%= link_to beer.name, beer %></p>
    <p><strong>Style: </strong><%= beer.style %></p>
    <p><strong>Brewery: </strong><%= link_to beer.brewery.name, beer.brewery %></p>
    <br>
  <% end %>
</div>

<%= link_to('New Beer', new_beer_path) if current_user %>
