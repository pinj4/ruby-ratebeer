<div id="<%= dom_id style %>">
  <p>
    <strong>Name:</strong>
    <%= style.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= style.description %>
  </p>

  <p>
  <strong>Beers:</strong>
  <%= style.beers.count %>
</p>

<p>
 <% style.beers.each do |beer| %>
   <li><%= link_to beer.name, beer %></li>
 <% end %>
</p>

</div>
