<%= render @beer_club %>

<% if current_user %>
  <% if @beer_club.members.exclude?(current_user) %>
    <%= form_with(model: @membership) do |form| %>
      <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.submit "Join the beer club" %>
    <% end %>
  <% else %>
    <%= form_with(model: @membership, method: :delete) do |form| %>
      <%= form.hidden_field :membership_id, value: @membership.id %>
      <%= form.hidden_field :beer_club_id, value: @beer_club.id %>
      <%= form.hidden_field :beer_club_name, value: @beer_club.name %>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.submit "End the membership", class:"btn btn-warning"%>
    <% end %>
  <% end %>

<div>
  <br>
  <%= link_to "Edit this beer club", edit_beer_club_path(@beer_club), class:"btn btn-primary" %> |
  <%= link_to "Back to beer clubs", beer_clubs_path, class:"btn btn-secondary" %>

  <p><%= button_to "Destroy this beer club", @beer_club, method: :delete, class:"btn btn-danger" %>
</div>
<% end %>

